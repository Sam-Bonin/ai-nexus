{
  "appId": "com.ainexus.app",
  "productName": "AI Nexus",
  "directories": {
    "output": "dist"
  },
  "files": [
    "package.json",
    "electron/**/*",
    "!electron/**/*.ts",
    "!electron/tsconfig.json",
    "!node_modules/**/*"
  ],
  "asar": true,
  "extraResources": [
    {
      "from": ".next/standalone",
      "to": "standalone"
    },
    {
      "from": "resources/icon.icns",
      "to": "icon.icns"
    }
  ],
  "mac": {
    "target": "dir",
    "icon": "resources/icon.icns",
    "category": "public.app-category.productivity"
  }
}
